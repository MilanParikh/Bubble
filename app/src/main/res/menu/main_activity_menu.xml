<?xml version="1.0" encoding="utf-8"?>
<!--layout of the main activity present on all pages-->

<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--adds a search button-->
    <item
        android:id="@+id/menu_search"
        android:title="@string/search"
        android:icon="@drawable/ic_search_white_24dp"
        app:showAsAction="ifRoom|collapseActionView"
        app:actionViewClass="android.support.v7.widget.SearchView" />

    <!--adds a button to go to snippet upload-->
    <item
        android:id="@+id/menu_upload_snippet_button"
        android:title="@string/upload_snippet"
        app:showAsAction="never"/>

    <!--adds a button to go to artist upload-->
    <item
        android:id="@+id/menu_upload_artist_button"
        android:title="@string/upload_artist"
        app:showAsAction="never"/>

    <!--adds a button to logout-->
    <item
        android:id="@+id/menu_logout_button"
        android:title="@string/logout"
        app:showAsAction="never"/>
    <item
        android:id="@+id/menu_clear_likes"
        android:title="@string/clear_likes"
        app:showAsAction="never"/>
    <item
        android:id="@+id/menu_refresh_cards"
        android:title="@string/refresh_cards"
        app:showAsAction="never"/>
</menu>